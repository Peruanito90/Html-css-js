  <script>

    // Obt√©n todos los elementos de bot√≥n de reproducci√≥n

    var playButtons = document.querySelectorAll('.play-button');

    // Recorre los botones de reproducci√≥n y agrega un controlador de eventos a cada uno

    playButtons.forEach(function(button) {

      button.addEventListener('click', function() {

        var videoUrl = button.getAttribute('data-video');

        reproducirVideo(videoUrl);

      });

    });

    // Funci√≥n para reproducir el video

    function reproducirVideo(url) {

      var videoElement = document.createElement('video');

      videoElement.src = url;

      videoElement.controls = true;

      videoElement.autoplay = true;

      videoElement.style.width = '100%';

      // Reemplaza el contenido de la p√°gina con el reproductor de video

      document.body.innerHTML = '';

      document.body.appendChild(videoElement);

    }

  </script>

